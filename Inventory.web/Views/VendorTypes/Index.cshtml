@model IEnumerable<Inventory.ViewModel.Vendor.VendorTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
              VendorType Name
            </th>
            <th>
               Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VendorTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a class="btn btn-primary" asp-controller="VendorsTypes" asp-action="Edit" asp-route-id="@item.VendorTypeId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="VendorsTypes" asp-route-id="@item.VendorTypeId" onClick="return confirm('Are you sure you want to delete this customer Type?')">Delete</a><td>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
